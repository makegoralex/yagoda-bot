[Unit]
Description=Yagoda Telegram bot (long polling)
After=network-online.target yagoda-backend.service
Wants=network-online.target
Requires=yagoda-backend.service

[Service]
Type=simple
WorkingDirectory=/home/yagoda_staff/yagoda-bot
EnvironmentFile=/home/yagoda_staff/yagoda-bot/.env
Environment=BACKEND_BASE_URL=http://127.0.0.1:8000
ExecStart=/home/yagoda_staff/yagoda-bot/.venv/bin/python -m src.bot.telegram_bot
Restart=always
RestartSec=3

[Install]
WantedBy=default.target
