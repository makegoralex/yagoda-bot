[Unit]
Description=Yagoda bot (Docker Compose)
After=network-online.target docker.service
Wants=network-online.target
Requires=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/yagoda_staff/yagoda-bot
Environment=DEPLOY_REF=origin/main
ExecStart=/home/yagoda_staff/yagoda-bot/deploy/refresh_docker.sh
ExecStop=/usr/bin/docker compose down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
